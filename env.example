# Database Configuration
POSTGRES_USER=tattoo
POSTGRES_PASSWORD=tattoo_pass
POSTGRES_DB=tattoo_db
DATABASE_URL=postgresql://tattoo:tattoo_pass@database:5432/tattoo_db
# Для внешнего подключения с компьютера используйте:
# DATABASE_URL_EXTERNAL=postgresql://tattoo:tattoo_pass@localhost:5432/tattoo_db

# Server Configuration
NODE_ENV=development
PORT=4000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Cloudflare R2 Configuration
S3_ACCESS_KEY_ID=your-r2-access-key-id
S3_SECRET_ACCESS_KEY=your-r2-secret-access-key
S3_BUCKET_NAME=your-bucket-name
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_PUBLIC_DOMAIN=your-bucket-name.your-account-id.r2.cloudflarestorage.com
