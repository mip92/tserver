# Database Configuration
POSTGRES_USER=tattoo_dev
POSTGRES_PASSWORD=tattoo_pass_dev
POSTGRES_DB=tattoo_dev_db
DATABASE_URL=postgresql://tattoo_dev:tattoo_pass_dev@database:5432/tattoo_dev_db
# Для внешнего подключения с компьютера используйте:
DATABASE_URL_EXTERNAL=postgresql://username:password@localhost:5433/database_name

# Production Database Configuration (for migrations)
# Use localhost when running commands locally (not in Docker)
PRODUCTION_DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/your_db_name
# Use host.docker.internal when running in Docker containers
# PRODUCTION_DATABASE_URL=postgresql://your_db_user:your_db_password@host.docker.internal:5432/your_db_name

# Server Configuration
NODE_ENV=development
PORT=4000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=20s
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Cloudflare R2 Configuration
S3_ACCESS_KEY_ID=your-r2-access-key-id
S3_SECRET_ACCESS_KEY=your-r2-secret-access-key
S3_BUCKET_NAME=your-bucket-name
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_PUBLIC_DOMAIN=your-bucket-name.your-account-id.r2.cloudflarestorage.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_LOGIN=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS Configuration (Kyivstar)
KYIVSTAR_CLIENT_ID=869f7b6c-f6fc-42a7-bf62-bc2c57dcf1c2
KYIVSTAR_CLIENT_SECRET=your_client_secret
